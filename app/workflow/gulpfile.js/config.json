{
    "name": "aw-fullstack",
    "path": "C:/Users/Felhasznalo/dev/aw-fullstack/",

    "server": {
        "type": "express",
        "target": "public_html/"        
    },

    "watch": {
        "enabled": true, 
        "globs": [
            "public_html/**/*",
            "!public_html/**/dist/**/*",
            "bower.json"
        ]
    },

    "sass": {
        "enabled": true,
        "outputDir": "public_html/style/dist",
        "fontsDir": "public_html/style",
        "globs": [
            "public_html/style/src/var.scss",
            "public_html/style/src/base.scss",
            "public_html/style/src/**/*.scss"
        ]
    },
    
    "javascript":  {
        "enabled": true,
        "outputDir": "public_html/js/dist",
        "globs": [
            "public_html/js/src/**/app.js",
            "public_html/js/src/**/index.js",
            "public_html/js/src/**/*.module.js",
            "public_html/js/src/**/*.js"
        ]
    },

    "cachebust":  {
        "enabled": true,
        "outputDir": "public_html/",
        "globs": [
            "public_html/*.html"
        ]
    },

    "dependencyManagement": {
        "enabled": true,
        "overrides": {}
    }
}